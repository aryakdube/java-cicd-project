pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'   
        jdk 'JAVA_HOME'      
    }

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/aryakdube/java-cicd-project.git' 
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Run Application') {
            steps {
                sh 'java -cp target/java-cicd-project-1.0-SNAPSHOT.jar com.example.app.HelloWorld'
            }
        }
    }
}
